<head>
    <link rel="stylesheet" type="text/css" href="/styles/forms.css">
    <link rel="stylesheet" type="text/css" href="/styles/show.css">
    <script defer src="/scripts/forms.js" type="text/javascript"></script>
</head>

<style>
    body {
        background: rgba(251, 249, 235, 0.737);
        background: rgba(203, 203, 203, 0.737);
    }
</style>

<nav>
    <div class="add_btns_container">
        <a href="/bands "> <h3 class="nav_btn btn font">Back</h3> </a>
    </div>

    <h3 class="show page_title"> Add New Band</h3>
    <div class="dropdown">
        <button class="dropdown_btn btn nav_btn"><i class="fa-solid fa-chevron-down"></i></button>
        <div class="nav_menue">
            <a href="/bands" class="btn nav_btn">Bands</a>
            <a href="/events" class="btn nav_btn">Events</a>
            <a href="/venues" class="btn nav_btn">Venues</a>
        </div>
    </div>
</nav>


<form class="add-form" action="/bands" method="POST">
    <div class="form-group-container">
        
        <!-- Band Name -->
        <div class="add-name form-group form-section">
            <label for="name">Name</label>
            <input type="text" class="form__input" id="name" name="name" placeholder="Band name" required>
            <span class="form__error">Sample Error Message</span>
        </div>

        <!-- Origin -->
            <div class="add-location form-group form-section">
                <span class="form-section-title">Origin</span>

                <label class="origin" for="orgin.country"></label>
                <input type="text" class=" origin form__input" id="origin.country" name="origin.country" placeholder="Country">
                <span class="form__error">Sample Error Message</span>

                <label class="origin" for="orgin.state"></label>
                <input type="text" class="origin form__input" id="origin.state" name="origin.state" placeholder="State">
                <span class="form__error">Sample Error Message</span>
                
                <label class="origin" for="orgin.city"></label>
                <input type="text" class="origin form__input" id="origin.city" name="origin.city" placeholder="City">
                <span class="form__error">Sample Error Message</span>
            </div>

        <!-- Members (array) -->
            <div class="edit-members form-group form-section">
                <label for="members">Members</label>

                <div class="array_container">
                
                    <div class=" dynamic_input_container">
                        <input type="text" class="members_input form__input" id="memberName" name="memberName" placeholder="name">
                        <input type="text" class="members_input form__input" id="membersRole" name="memberRole" placeholder="roles (separate by commas)">
                        
                        <div class="minus_btn">
                            <i class="fa-solid fa-minus"></i>
                        </div>
                        <div class="plus_btn">
                            <i class="fa-solid fa-plus"></i> 
                        </div>
                    </div>
                </div>
                <span class="form__error">Every member must have at least one role. Separate roles by commas.</span>
            </div>



        <!-- Biography -->
        <div class="edit-description add-description form-group form-section">
            <label for="biography">Bio</label>
            <textarea type="text" class="form__input" id="biography" name="biography" placeholder="Tell us about the band (max 500 chars)." maxlength="500"></textarea>
            <span class="form__error">Write a bio 500 chars or less</span>
        </div>

        <!-- Songs (array) -->
        <div class="add-songs form-group form-section">
            <label class="songs" for="songs">Songs</label>
            <div class="array_container">

                <div class=" dynamic_input_container">
                    <input type="text" class="songs_input form__input" id="songs" name="songs" placeholder="add song">
                 
                    <div class="minus_btn">
                        <i class="fa-solid fa-minus"></i>
                    </div>
                    <div class="plus_btn">
                        <i class="fa-solid fa-plus"></i> 
                    </div>
                </div>
            </div>
            <span class="form__error">Please add at least one song</span>
        </div>
       
        <!-- Genres (array) -->
        <div class="edit-genres form-group form-section">
            <label class="genres" for="genres">Genres</label>

            <div class="array_container">
                <div class=" dynamic_input_container">
                    
                    <input type="text" class="genres_input form__input" id="genres" name="genres" placeholder="add genre">
                 
                    <div class="minus_btn">
                        <i class="fa-solid fa-minus"></i>
                    </div>
                    <div class="plus_btn">
                        <i class="fa-solid fa-plus"></i> 
                    </div>

                </div>
            </div>
            <span class="form__error">Sample Error Message</span>
            
        </div>

        <!-- Tags (array) -->
        <div class="tags-field form-group">
            <label for="tags">New Tag</label>
            <input type="text" name="tags" class="form-content">
        </div>
        <!-- Images -->


        <input type="submit" class="btn btn-primary"/>
        <a href="/bands" class="btn btn-secondary">Cancel</a>
        
            </div>
</form>
