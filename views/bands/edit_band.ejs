    <!-- BIOGRAPHY -->
    <div class="edit-description form-group form-section">
        <label for="biography">Bio:</label>
        <textarea type="text" id="biography"></textarea>
    </div>
    <!-- SONGS (array) -->
    <div class="edit-songs form-group form-section">

    </div>
    <!-- TOURING (boolean) -->
    <div class="edit-touring form-group form-section">
        <label for="touring">Touring</label>
        
        <span>yes</span>
        <input type="radio" name="touring" value="true">
        <span>no</span>
        <input type="radio" name="touring" value="false">
    </div>
    <!-- GENRES (array) -->
    <div class="edit-genres form-group form-section">

    </div>
    <!-- TAGS (array) -->
    <div class="edit-tags form-group form-section">

    </div>
    <!-- Images -->
    <div class="edit-images form-group form-section">

    </div>


    <input type="submit" class="btn btn-primary"/>
    <a href="/bands" class="btn btn-secondary">Cancel</a>

</form>