<h2 class="form__title">EDIT <%= name %></h2>

<form class="edit-form" action="/bands/<%= _id %>/?_method=put" method="POST">
    <div class="form-group-container">

        <!-- Band Name -->
        <div class="edit-name form-group form-section">
            <label for="name">Name</label>
            <input type="text" class="form__input form__input--error" id="name" name="name" placeholder="Enter band name">
            <span class="form__error">Sample Error Message</span>
        </div>

        <!-- ORIGIN -->
        <div class="edit-location form-group form-section">
            <span class="form-section-title">Origin</span>

            <label class="origin" for="orgin.country">Country</label>
            <input type="text" class="origin form__input form__input--error" id="origin.country" name="origin.country" placeholder="Country of Origin">
            <span class="form__error">Sample Error Message</span>

            <label class="origin" for="orgin.state">State</label>
            <input type="text" class="origin form__input form__input--error" id="origin.state" name="origin.state" placeholder="State of Origin">
            <span class="form__error">Sample Error Message</span>
            
            <label class="origin" for="orgin.city">City</label>
            <input type="text" class="origin form__input form__input--error" id="origin.city" name="origin.city" placeholder="City of Origin">
            <span class="form__error">Sample Error Message</span>

        </div>

        <!-- MEMBERS (array) -->
