<h2>EDIT <%= name %></h2>

<form action="/bands/<%= _id %>/?_method=put" method="POST">
    <!-- Band Name -->
    <div class="edit-name form-group form-section">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name">
    </div>

    <!-- ORIGIN -->
    <div class="edit-location form-group form-section">
        <span class="form-section-title">Origin</span>

        <label for="orgin.country">Country</label>
        <input type="text" id="origin-country" name="origin.country" class="form-text-input">

        <label for="orgin.state">State</label>
        <input type="text" id="origin-state" name="origin.state" class="form-text-input">

        <label for="orgin.city">City</label>
        <input type="text" id="origin-city" name="origin.city" class="form-text-input">
    </div>

    <!-- MEMBERS (array) -->
