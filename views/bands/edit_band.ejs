        </div> -->

        <!-- BIOGRAPHY -->
        <div class="edit-description form-group form-section">
            <label for="biography">Bio</label>
            <input type="text" class="form__input form__input--error" id="biography" name="biography" placeholder="What should the fans to know about the band?">
        </div>
        <!-- SONGS (array) -->
        <div class="edit-songs form-group form-section">

        </div>
